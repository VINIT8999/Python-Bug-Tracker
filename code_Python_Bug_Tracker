
# Initial bug statuses
STATUS_LIST = ["open", "in_progress", "closed"]

# Initial bug titles
BUG_TITLES = [
    "Login Issues",
    "Order Placement Issue",
    "Reservation Conflict"
]

# Create initial bug database
bugs = {
    title: {
        "description": "",
        "status": status,
        "priority": ""
    }
    for title, status in zip(BUG_TITLES, STATUS_LIST)
}

print("Total bugs found:", len(bugs))


# View all bugs
def view_bugs(bug_data):
    if not bug_data:
        print("No bugs found.")
        return

    for title, details in bug_data.items():
        print(f"Bug Title: {title}")
        print("Details:", details)
        print("-" * 40)


# Update bug description
def update_description(bug_data):
    for title in bug_data:
        desc = input(f"Enter description for '{title}': ").strip()
        bug_data[title]["description"] = desc


# Log multiple bugs
def log_bugs(bug_data):
    while True:
        title = input("Enter new bug title: ").strip()

        if title in bug_data:
            print("Bug already exists.")
        else:
            status = input("Enter status (open / in_progress / closed): ").strip()
            priority = input("Enter priority (low / medium / high): ").strip()
            description = input("Enter description: ").strip()

            bug_data[title] = {
                "description": description,
                "status": status,
                "priority": priority
            }

            print("Bug successfully logged.")

        choice = input("Do you want to add another bug? (yes/no): ").strip().lower()
        if choice != "yes":
            break


# ---- Menu-driven execution ----
while True:
    print("\n--- Bug Tracker Menu ---")
    print("1. View bugs")
    print("2. Update descriptions")
    print("3. Log new bugs")
    print("4. Exit")

    option = input("Choose an option (1-4): ").strip()

    if option == "1":
        view_bugs(bugs)
    elif option == "2":
        update_description(bugs)
    elif option == "3":
        log_bugs(bugs)
    elif option == "4":
        print("Exiting Bug Tracker.")
        break
    else:
        print("Invalid option. Please try again.")
